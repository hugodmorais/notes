<div class="row px-5">
  <div class="col-lg-12">
    <div class="panel-body px-5">
      <div class="container pt-4">
        <%= form_with model: @note, role: 'form', class: 'form-horizontal' do |f| %>
          <h3 style="text-align:center">Adicionar uma nova categoria</h3>
          <div class="row mt-5">
            <div class="form-group col-md-8">
              <%= f.label :name do %>
                Nome</span>
              <% end %>
              <%= f.text_field :name, class: 'form-control' %>
              <% if @note.errors[:name].present? %>
                <span class="help-block text-danger">
                  <small><%= @note.errors[:name].first %></small>
                </span>
              <% end %>
            </div>
            <div class="form-group col-md-4">
              <%= f.label :color do %>
                Cor</span>
              <% end %>
              <div class="col-sm-12">
                <%= f.color_field :color, class: 'form-control', placeholder: 'color' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-8">
              <%= f.label :icon do %>
                Icon Font Awesome</span>
              <% end %>
              <%= f.text_field :icon, class: 'form-control' %>
              <% if @note.errors[:icon].present? %>
                <span class="help-block text-danger">
                  <small><%= @note.errors[:icon].first %></small>
                </span>
              <% end %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-sm-offset-2 col-sm-10 m-t-15">
              <%= f.submit 'Guardar', class: 'btn btn-primary' %>
              <%= link_to 'Cancelar', root_path, class: "btn btn-white m-l-5" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

  